<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>會員登入</title>
<link rel="stylesheet"
	href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/pure-min.css">

<!-- Styles for Login Popup -->
<style>
/* Hide the login form by default */
#login-popup {
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.5);
	justify-content: center;
	align-items: center;
}

#login-popup-content {
    background: #fff;
    padding-left: 8px;
    padding-right: 8px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    width: 300px;
}

#close-btn {
	background-color: red;
	color: white;
}

#login-btn {
	background-color: green;
	color: white;
}
</style>
</head>
<body>

	<a href="#" onclick="showLoginPopup(); return false;"> <i
		class="bi bi-person-circle d-none d-lg-block fs-3"></i>
	</a>


	<!-- Login Popup -->
	<div id="login-popup">
		<div id="login-popup-content">

			<form method="post" action="./login" class="pure-form">
				<fieldset class="pt-0">
					<legend>👨‍👩‍👧‍👦會員登入</legend>
					帳號: <input type="text" id="username" name="username" value="user123"
						placeholder="請輸入帳號" required /><id style="color: red">${wrongUsername}</id>
					<p />
					密碼: <input type="password" id="password" name="password"
						value="pass123" placeholder="請輸入密碼" required />
					<p />
					🔐 驗證: <input type="text" id="code" name="code"> 1234<p />

					<div class="d-flex justify-content-between">
						<div>
							<button type="button" class="pure-button pure-button-danger"
								id="close-btn" onclick="closeLoginPopup()">取消</button>
							<button type="submit"
								class="pure-button pure-button-primary ml-2" id="login-btn">登入</button>
						</div>
						<div style="margin-right: 5px;">
							<a href="./register">註冊</a> <a
								href="./group_buy/resetPassword.jsp">忘記密碼</a>
						</div>
					</div>
				</fieldset>
			</form>
		</div>
	</div>

	<script>
		function showLoginPopup() {
			document.getElementById('login-popup').style.display = 'flex';
		}

		function closeLoginPopup() {
			document.getElementById('login-popup').style.display = 'none';
		}
	</script>
</body>
</html>